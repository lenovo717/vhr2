                patient_id = #{patient_id,jdbcType=VARCHAR},
            </if>
            <if test="patient_name != null">
                patient_name = #{patient_name,jdbcType=VARCHAR},
            </if>
            <if test="base_time != null">
                base_time = #{base_time,jdbcType=VARCHAR},
            </if>
            <if test="address != null">
