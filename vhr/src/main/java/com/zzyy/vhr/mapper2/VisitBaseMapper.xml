            </if>
            <if test="week_time != null">
                week_time = #{week_time,jdbcType=VARCHAR},
            </if>
            <if test="month_time != null">
                month_time = #{month_time,jdbcType=VARCHAR},
            </if>
            <if test="halfyear_time != null">
